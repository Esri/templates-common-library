{
  "compilerOptions": {
    "sourceMap": false,
    "lib": ["ES6", "DOM", "ScriptHost"],
    "declaration": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "skipLibCheck": true,
    "noUnusedLocals": false
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./node_modules", "./dist", "./distESM", "./tests"]
}
